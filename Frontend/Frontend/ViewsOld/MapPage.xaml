<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
             xmlns:model="clr-namespace:Frontend.ViewModels"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Frontend.Views.MapPage">

    <maps:Map x:Name="map" MapType="Hybrid" ItemsSource="{Binding Pins}">
        <maps:Map.ItemTemplate>
            <DataTemplate>
                <>

                    <model:ColouredPin Position="{Binding Position}"
                                   Label="{Binding Description}" 
                                   Colour="{Binding Colour}"/>
                    <maps:Circle Center="{Binding Position}"
                                 FillColor="{Binding FillColour}"
                                 StrokeColor="{Binding StrokeColour}"
                                 StrokeWidth="7"/>
                </>
            </DataTemplate>
        </maps:Map.ItemTemplate>
    </maps:Map>
</ContentPage>